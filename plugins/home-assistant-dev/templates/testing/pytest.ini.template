[pytest]
testpaths = tests
norecursedirs = .git
asyncio_mode = auto
asyncio_default_fixture_loop_scope = function

# Logging
log_cli = true
log_cli_level = DEBUG

# Coverage
addopts = --cov=custom_components/{domain} --cov-report=html --cov-report=term-missing

# Markers
markers =
    slow: marks tests as slow (deselect with '-m "not slow"')
