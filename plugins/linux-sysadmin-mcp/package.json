{
  "name": "linux-sysadmin-mcp",
  "version": "1.0.0",
  "description": "Comprehensive Linux system administration MCP server for Claude Code",
  "type": "module",
  "bin": {
    "linux-sysadmin-mcp": "dist/server.js"
  },
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/server.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/server.bundle.cjs --define:import.meta.url=undefined",
    "start": "node dist/server.bundle.cjs",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "pino": "^10.3.1",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "Apache-2.0"
}
