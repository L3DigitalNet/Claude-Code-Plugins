async def test_user_flow_already_configured(
    hass: HomeAssistant,
    mock_client: AsyncMock,
    mock_setup_entry: AsyncMock,
) -> None:
    """Test duplicate entry prevention."""
    from pytest_homeassistant_custom_component.common import MockConfigEntry

    # Create existing entry
    existing_entry = MockConfigEntry(
        domain=DOMAIN,
        data=MOCK_CONFIG,
        unique_id="existing_unique_id",
    )
    existing_entry.add_to_hass(hass)

    # Mock validation to return same unique_id
    with patch(
        f"custom_components.{DOMAIN}.config_flow.{DOMAIN.title()}ConfigFlow._async_validate_input",
        return_value={"title": "Test", "unique_id": "existing_unique_id"},
    ):
        result = await hass.config_entries.flow.async_init(
            DOMAIN, context={"source": config_entries.SOURCE_USER}
        )

        result = await hass.config_entries.flow.async_configure(
            result["flow_id"], MOCK_CONFIG
        )

        assert result["type"] is FlowResultType.ABORT
        assert result["reason"] == "already_configured"


